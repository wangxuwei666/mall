<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="LOG_PATH" value="/mall/sys/log/" />
     
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
       <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{32} - %msg%n</pattern>
    </encoder>
	</appender>
	
	<appender name="ALL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
	  <encoding>UTF-8</encoding>
	  <File>${LOG_PATH}/mall.log</File>
	  <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
       <FileNamePattern>${LOG_PATH}/example-%d{yyyy-MM-dd}-%i.zip</FileNamePattern>
       <MaxHistory>10</MaxHistory>
	     <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
	     <MaxFileSize>200MB</MaxFileSize>
	   </TimeBasedFileNamingAndTriggeringPolicy>        
	  </rollingPolicy>
	  <layout class="ch.qos.logback.classic.PatternLayout">
	   <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{32} - %msg%n</pattern>
	  </layout>
  </appender>
	
	  <logger name="com.youmu" level="debug"/>
	  <logger name="jdbc.sqltiming" level="debug"/>
    <logger name="org.mybatis.spring.SqlSessionUtils" level="debug" />
    <logger name="org.apache.ibatis.jdbc.ScriptRunner" level="debug" />
    <logger name="org.apache.ibatis.jdbc.SqlRunner" level="debug" />
    <logger name="java.sql.Connection" level="debug" />
    <logger name="java.sql.Statement" level="debug" />
    <logger name="java.sql.PreparedStatement" level="debug" />
    <logger name="java.sql.ResultSet" level="debug" />
	
   <root level="info">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="ALL_FILE" />
   </root> 
</configuration>